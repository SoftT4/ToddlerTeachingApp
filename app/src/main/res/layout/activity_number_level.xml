<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9F9"
    tools:context=".NumberLevel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="308dp">

        <TextView
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/beachday"
            android:shadowColor="#2a2d30"
            android:shadowDx="5"
            android:shadowDy="10"
            android:shadowRadius="1"
            android:text="Choose a level"
            android:textColor="#FF7F50"
            android:textSize="56sp" />

        <ImageButton
            android:id="@+id/easy_btn"
            android:layout_width="229dp"
            android:layout_height="144dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="#00000000"
            app:srcCompat="@drawable/easy" />

        <ImageButton
            android:id="@+id/medium_btn"
            android:layout_width="229dp"
            android:layout_height="144dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="#00000000"
            app:srcCompat="@drawable/medium" />

        <ImageButton
            android:id="@+id/hard_btn"
            android:layout_width="229dp"
            android:layout_height="144dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="#00000000"
            app:srcCompat="@drawable/hard" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_btn"
            android:fontFamily="@font/beachday"
            android:padding="13dp"
            android:shadowColor="#212F3C"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="3"
            android:text="BACK"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>